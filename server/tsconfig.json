{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",                        // ðŸ‘ˆ All code must now be under /src
    "baseUrl": "src",                        // ðŸ‘ˆ Required for path aliases
    "paths": {
      "@/*": ["*"]                           // ðŸ‘ˆ Example: @/models/car = src/models/car
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
